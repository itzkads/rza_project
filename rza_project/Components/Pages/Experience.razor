@page "/experience"

<title>RZA - experience</title>
<div class="experience-slide">
    <div class="experience-item">
        <a href="/experience-1">
            <img src="image1.jpg" alt="Experience 1">
            <div class="overlay">Experience 1</div>
        </a>
    </div>
    <div class="experience-item">
        <a href="/experience-2">
            <img src="image2.jpg" alt="Experience 2">
            <div class="overlay">Experience 2</div>
        </a>
    </div>
    <div class="experience-item">
        <a href="/experience-3">
            <img src="image3.jpg" alt="Experience 3">
            <div class="overlay">Experience 3</div>
        </a>
    </div>
</div>

<style>
    .experience-slide {
        display: flex;
        justify-content: space-between;
        margin: 20px auto;
        max-width: 1200px;
    }

    .experience-item {
        position: relative;
        width: 30%;
        overflow: hidden;
    }

        .experience-item img {
            width: 100%;
            transition: transform 0.3s ease;
        }

        .experience-item:hover img {
            transform: scale(1.1);
        }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        text-align: center;
        padding: 10px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .experience-item:hover .overlay {
        opacity: 1;
    }

    .experience-item a {
        text-decoration: none;
        color: white;
    }
</style>



